<% if current_user %>
<h1><%= current_user.band.name %> Concerts</h1>
<% current_user.band.concerts.each do |concert| %>
<ul>
<h3><%= link_to concert.date, concert_path(concert) %></h3>
<p><%= concert.venue.name %></p>
<p>Admission $<%= concert.admission %></p>
</ul>
<% end %>
<% else %>
<h1>Concerts</h1>
<% @concerts.each do |concert| %>
<ul>
<h3><%= link_to concert.date, concert_path(concert) %></h3>
<p><%= concert.venue.name %></p>
<p>Admission $<%= concert.admission %></p>
</ul>
<% end %>
<% end %>
<%= link_to 'New Show', new_concert_path %>
